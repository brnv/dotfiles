#!/bin/bash

set -u

debug=(bi)

test=(ze ci no xa pano)

dev=(vo mu papa)

hosts=(${debug[*]} ${test[*]} ${dev[*]})

check-error() {
    local error_code=$1

    if [ $error_code == 1 ]; then
        echo
        echo fail, error code: $error_code
        exit 1
    fi
}

execute-command() {
    local host=$1
    local cmd=$2

    echo $host:~ \$ $cmd
    ssh $host "$cmd"
    check-error $?
    echo
}

for host in ${hosts[*]}; do
    execute-command ya$host.yard.s "$@"
done

echo ok
