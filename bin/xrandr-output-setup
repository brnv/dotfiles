#!/bin/bash

setup-lg() {
    /usr/bin/xrandr --output DP-4 --mode 2560x1440 --output eDP1 --off
}

setup-dell() {
    /usr/bin/xrandr --output HDMI-1 --mode 1920x1080 --output eDP-1 --off
}

grep --silent "LG HDR" /var/log/Xorg.0.log

if [ $? == 0 ]; then
    setup-lg
fi

grep --silent "DELL SE" /var/log/Xorg.0.log

if [ $? == 0 ]; then
    setup-dell
fi

/home/operator/bin/xsetup
