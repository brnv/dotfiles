#!/bin/bash

position=$1

if [[ -z $position ]]; then
	position=right
fi

if [[ $(hostname) == "work" ]]; then
    xrandr --output VGA-1 --rotate left --mode 1920x1080 --left-of HDMI-2 --output HDMI-2 --mode 1920x1080
else
    xrandr --output HDMI-0 --mode 1920x1080 --$position-of eDP --output eDP --mode 1366x768
fi

xsetup
