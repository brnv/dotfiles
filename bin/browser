#!/bin/bash

url=$(sed -r 's#^(git+ssh|ssh|git)://(\w+@)?##' <<< "$1")
params="${@:2}"

scheme=$(grep -Po '^\w+://' <<< "$url")
if [[ "$scheme" != "http://"
   && "$scheme" != "https://"
   && "$scheme" != "ftp://"
   && "$scheme" != "file://"
   && "$scheme" != "" ]]; then
    notify-send "URL" "$url"

    exit 1
fi

browser="chromium"
if [[ "$url" ]]; then
    exec $browser "$url"
else
    exec "$browser"
fi

