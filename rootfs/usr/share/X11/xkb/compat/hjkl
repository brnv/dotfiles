# hjkl -> arrow keys remapping fix
partial
xkb_compatibility "hjkl" {
    interpret KP_Left {
        repeat= True;
        action= RedirectKey(keycode=<LEFT>, clearmods=Super);
    };
    interpret Left {
        repeat= True;
        action= RedirectKey(keycode=<LEFT>, clearmods=Super);
    };
    interpret KP_Right {
        repeat= True;
        action= RedirectKey(keycode=<RGHT>, clearmods=Super);
    };
    interpret Right {
        repeat= True;
        action= RedirectKey(keycode=<RGHT>, clearmods=Super);
    };
    interpret KP_Up {
        repeat= True;
        action= RedirectKey(keycode=<UP>, clearmods=Super);
    };
    interpret Up {
        repeat= True;
        action= RedirectKey(keycode=<UP>, clearmods=Super);
    };
    interpret KP_Down {
        repeat= True;
        action= RedirectKey(keycode=<DOWN>, clearmods=Super);
    };
    interpret Down {
        repeat= True;
        action= RedirectKey(keycode=<DOWN>, clearmods=Super);
    };
    interpret KP_Prior {
        repeat= True;
        action= RedirectKey(keycode=<PGUP>, clearmods=Super);
    };
    interpret Prior {
        repeat= True;
        action= RedirectKey(keycode=<PGUP>, clearmods=Super);
    };
    interpret KP_Next {
        repeat= True;
        action= RedirectKey(keycode=<PGDN>, clearmods=Super);
    };
    interpret Next {
        repeat= True;
        action= RedirectKey(keycode=<PGDN>, clearmods=Super);
    };
    interpret KP_Home {
        repeat= True;
        action= RedirectKey(keycode=<HOME>, clearmods=Super);
    };
    interpret Home {
        repeat= True;
        action= RedirectKey(keycode=<HOME>, clearmods=Super);
    };
    interpret KP_End {
        repeat= True;
        action= RedirectKey(keycode=<END>, clearmods=Super);
    };
    interpret End {
        repeat= True;
        action= RedirectKey(keycode=<END>, clearmods=Super);
    };
    interpret Pointer_Up {
        action = MovePtr(x=+0,y=-5);
    };
    interpret Pointer_UpLeft {
        action = MovePtr(x=-3,y=-5);
    };
    interpret Pointer_UpRight {
        action = MovePtr(x=+3,y=-5);
    };
    interpret Pointer_Left {
        action = MovePtr(x=-5,y=-0);
    };
    interpret Pointer_Right {
        action = MovePtr(x=+5,y=+0);
    };
    interpret Pointer_DownLeft {
        action = MovePtr(x=-3,y=+5);
    };
    interpret Pointer_DownRight {
        action = MovePtr(x=+3,y=+5);
    };
    interpret Pointer_Down {
        action = MovePtr(x=+0,y=+5);
    };
    interpret Pointer_ClickLeft {
        action = PointerButton(button=1);
    };
    interpret Pointer_ClickMiddle {
        action = PointerButton(button=3);
    };
    interpret Pointer_ClickRight {
        action = PointerButton(button=2);
    };
};
